<section class="todosLosProductos">
  <h1>Todos los productos</h1>
  <h4>Listado de productos</h4>
  <ul>
    {{#each product}}
      <li>{{this.title}}</li>
      <p>${{this.price}}</p>
    {{/each}}
  </ul>
  {{#if hasPrevPage}}
    <a href="/api/products?page={{prevPage}}"> Anterior </a>
  {{/if}}
  {{#if hasNextPage}}
    <a href="/api/products?page={{nextPage}}"> Siguiente </a>
  {{/if}}

  <p>PÃ¡gina {{currentPage}} de {{totalPages}}</p>
</section>