<h1>Mi Perfil</h1>

<div>
  <p>Bienvenido, {{user.nombre}} {{user.apellido}}!</p>
  <p>Rol: {{user.role}}</p>

  <form action="logout" method="POST">
    <button type="submit">Logout</button>
  </form>

  {{#if this.isAdmin}}
    <a href="/realtimeproducts">Modificar Productos</a>
  {{else}}
    <a href="/api/products">Tienda</a>
  {{/if}}
</div>